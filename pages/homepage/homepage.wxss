
.container {
  background-color: #f2f2f2;
  min-height: 100%;
}

.swiper-container {
  width: 100%;
  position: relative;
}

.swiper-box {
  width: 100%;
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 300rpx;
  display: inline-block;
  overflow: hidden;
}

.categoryList-container {
  width: 100%;
  height: 150rpx;
  border-bottom: 20rpx;
  background-color: #ffffff;
  padding-bottom: 10rpx;
}

.category-info {
  display: inline-block;
  text-align: center;
  position: relative;
  margin-top: 20rpx;
  height: 130rpx;
  width: 25%;
}

.category-image {
  width: 80rpx;
  height: 80rpx;
}

.category-text {
  font-size: 25rpx;
  width: 100%;
  line-height: 30rpx;
}

.notice-container {
  width: 100%;
  height: 50rpx;
  background-color: #ffffff;
} 

.notice-info {
   width: 100%;
   height: 50rpx;
   display: inline-block;
   position: relative;
   background-color: #ffffff;
   padding: 20rpx 20rpx 20rpx 20rpx;
} 

.notice-tip {
  display: inline-block;
  width: 10%;
  height: 50rpx;
  font-size: 25rpx;
  vertical-align: middle;
}

.swiper-notice {
  display: inline-block;
  width: 75%;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}

.notice-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
  font-size: 25rpx;
}

.notice-img {
  display: inline-block;
  width: 10%;
  height: 30rpx;
  vertical-align: middle;
}

.swiper-newtea-container {
  width: 100%;
  position: relative;
  margin-top: 60rpx;
}

.swiper-newtea {
  width: 100%;
  height: 300rpx;
}

.header-news {
  width: 100%;
  height: 50rpx;
  text-align: left;
  font-size: 25rpx;
  font-weight: bold;
  margin-top: 40rpx;
  background-color: #ffffff;
  padding-top: 20rpx;
  padding-left: 20rpx;
}

.news-list {
  font-size: 25rpx;
  display: flex;
  width: 100%;
  padding: 10rpx 0;   
  border-bottom: 1rpx;
  color: #6D6D6D;
  justify-content: space-between;
  background-color: #ffffff;
}

.news-image {
  width: 200rpx;
  height: 125rpx;
  margin: 20rpx;
}

.news-info {
  margin: 15rpx;
  flex: 1;
}

.news-info-title {
  color: black;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.news-info-time {
  color: #999999;
  font-size: 25rpx;
  margin-top: 30rpx;
}